{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "outDir": "../../../build",
    "rootDir": "../../../",
    "noEmitOnError": true,
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "noEmit": false,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
  }
}
